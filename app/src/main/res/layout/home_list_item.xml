<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHeight_percent="0.6"
        android:background="@drawable/avatar_image_placeholder"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/nick_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/icon_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/time_passed_text_view"
        tools:text="Giorgi Jikia"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/title"
        />
    <TextView
        android:id="@+id/time_passed_text_view"
        app:layout_constraintStart_toEndOf="@id/nick_name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/nick_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1 hour"
        android:layout_marginRight="10dp"
        android:textSize="17sp"
        />
    
    <TextView
        android:id="@+id/message_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/nick_name_text_view"
        app:layout_constraintStart_toStartOf="@id/nick_name_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="17sp"
        tools:text="სატესტო ტექსტი იმისათვის რომ შევამოწმო რამდენად სწორედ მუშაობს"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>